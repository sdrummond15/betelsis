<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details"
                  addfieldpath="/administrator/components/com_administrations/models/fields"
    >
        <field  name="id" 
                        type="text" 
                        default="0"
                        readonly="true" 
                        class="readonly"
                        label="JGLOBAL_FIELD_ID_LABEL" 
                        description ="JGLOBAL_FIELD_ID_DESC"
        />

        <field  name="id_cliente" 
                        type="clienteorcserv" 
                        label="COM_ADMINISTRATIONS_FIELD_CLIENT_LABEL"
                        required="true" 
        />

        <field  name="contato" 
                        type="text" 
                        class="inputbox"
                        size="40" 
                        label="COM_ADMINISTRATIONS_FIELD_CONTATO_LABEL"
        />

        <field  name="endereco" 
                        type="text" 
                        class="inputbox"
                        size="40" 
                        label="JFIELD_ENDERECO_LABEL"
                        description="COM_ADMINISTRATIONS_FIELD_END_DESC" 
                        required="true" 
        />
                                
        <field  name="fone" 
                        type="text" 
                        class="inputbox"
                        size="40" 
                        label="JFIELD_FONE_LABEL"
        />
                
        <field name="fone_comercial" 
                        type="text" 
                        class="inputbox"
                        size="40" 
                        label="JFIELD_FONE_COMERCIAL_LABEL"
        />


        <field name="celular" 
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_CEL_LABEL"
        />
                
        <field name="celular2" 
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_CEL2_LABEL"
        />
                
        <field name="email" 
                       type="text" 
                       class="inputbox"
                       size="80" 
                       label="JFIELD_EMAIL_LABEL"
        />
                
        <field name="email2" 
                       type="text" 
                       class="inputbox"
                       size="80" 
                       label="JFIELD_EMAIL2_LABEL"
        />
                
        <field name="num" 
                       type="text" 
                       class="inputbox"
                       size="6" 
                       label="JFIELD_NUM_LABEL"
        />
                
        <field name="compl" 
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_COMPL_LABEL"
        />
                
        <field name="id_cidade" 
                       type="cidadeorcserv"
                       label="COM_ADMINISTRATIONS_FIELD_CIDADE_LABEL"
        />
        <field name="tp_pag"
                       type="list"
                       label="JFIELD_PAG"
                       class="inputbox"
                       size="1"
                       default="0">

            <option value="0">Dinheiro</option>
            <option value="1">Cheque</option>
            <option value="2">Cartão de Crédito</option>
            <option value="3">Cartão de Débito</option>

        </field>
                
        <field name="published" 
                       type="list" 
                       label="JSTATUS" 
                       class="inputbox" 
                       size="1" 
                       default="1">
                    
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>

        </field>
                              
    </fieldset>
    <fieldset name="publish"
                  label="COM_ADMINISTRATIONS_GROUP_LABEL_PUBLISHING_DETAILS"
    >

        <field name="created" 
                       type="calendar"
                       label="JGLOBAL_FIELD_CREATED_LABEL" 
                       description="JGLOBAL_FIELD_CREATED_Desc"
                       class="inputbox" 
                       size="22" 
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" 
        />
                
        <field name="created_by" 
                       type="user" 
                       label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
                       description="JGLOBAL_FIELD_CREATED_BY_Desc" 
        />

        <field name="publish_up" type="calendar"
                       label="COM_ADMINISTRATIONS_FIELD_PUBLISH_UP_LABEL" 
                       description="COM_ADMINISTRATIONS_FIELD_PUBLISH_UP_DESC"
                       class="inputbox" 
                       format="%Y-%m-%d %H:%M:%S" 
                       size="22"
                       filter="user_utc"
        />

        <field name="publish_down" 
                       type="calendar"
                       label="COM_ADMINISTRATIONS_FIELD_PUBLISH_DOWN_LABEL" 
                       description="COM_ADMINISTRATIONS_FIELD_PUBLISH_DOWN_DESC"
                       class="inputbox" 
                       format="%Y-%m-%d %H:%M:%S" 
                       size="22"
                       filter="user_utc" 
        />

    </fieldset>
	
</form>
