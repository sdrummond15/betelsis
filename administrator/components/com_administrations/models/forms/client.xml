<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_administrations/models/fields"
	>
		<field name="id" 
                       type="text" 
                       default="0"
                       readonly="true" 
                       class="readonly"
                       label="JGLOBAL_FIELD_ID_LABEL" 
                       description ="JGLOBAL_FIELD_ID_DESC"
                />

		<field name="nome"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="COM_ADMINISTRATIONS_FIELD_CLIENT_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_CLIENT_DESC" 
                       required="true" 
                />

		<field name="alias" 
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_ALIAS_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_ALIAS_DESC" 
                />

                <field name="fantasia"
                       type="text"
                       class="inputbox"
                       size="40"
                       label="JFIELD_FANTASIA_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_FANTASIA_DESC"
                />
                
                <field name="contato"
                       type="text"
                       label="COM_ADMINISTRATIONS_FIELD_CONTACT_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_CONTACT_DESC"
                       class="inputbox" 
                       size="50"
                       maxlength="50"
                       required="true"
                />

                <field name="cnpjcpf"
                       type="text"
                       class="inputbox"
                       size="20"
                       label="JFIELD_CPFCNPJ_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_CPFCNPJ_DESC"
                />

                <field name="insc_est"
                       type="text"
                       class="inputbox"
                       size="20"
                       label="JFIELD_INSC_EST_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_INSC_EST_DESC"
                />

                <field name="insc_mun"
                       type="text"
                       class="inputbox"
                       size="20"
                       label="JFIELD_INSC_MUN_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_INSC_MUN_DESC"
                />

                <field name="endereco"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_ENDERECO_LABEL"
                />
                
                <field name="numero"
                       type="text" 
                       class="inputbox"
                       size="6" 
                       label="JFIELD_NUM_LABEL"
                />
                
                <field name="complemento"
                       type="text" 
                       class="inputbox"
                       size="40" 
                       label="JFIELD_COMPLEMENTO_LABEL"
                />

                <field name="cep"
                       type="text"
                       class="inputbox"
                       size="10" 
                       label="JFIELD_CEP_LABEL"
                />
                <field name="id_bairro"
                       type="bairrocliente"
                       label="COM_ADMINISTRATIONS_FIELD_BAIRRO_LABEL"
                />
                
                <field name="id_cidade"
                       type="cidadecliente"
                       label="COM_ADMINISTRATIONS_FIELD_CIDADE_LABEL"
                />
                
                <field name="fone"
                       type="tel" 
                       class="inputbox"
                       size="40"
                       maxlength="15"
                       label="JFIELD_FONE_LABEL"
                />
                
                <field name="fone_comercial"
                       type="tel" 
                       class="inputbox"
                       size="40"
                       maxlength="15"
                       label="JFIELD_FONE_COMERCIAL_LABEL"
                />
                
                <field name="celular"
                       type="tel" 
                       class="inputbox"
                       size="40"
                       maxlength="15"
                       label="JFIELD_CEL_LABEL"
                />
                
                <field name="celular2"
                       type="tel" 
                       class="inputbox"
                       size="40"
                       maxlength="15"
                       label="JFIELD_CEL2_LABEL"
                />
                
                <field name="email" 
                       type="email" 
                       class="inputbox"
                       size="80" 
                       label="JFIELD_EMAIL_LABEL"
                />
                
                <field name="email2"
                       type="email" 
                       class="inputbox"
                       size="80" 
                       label="JFIELD_EMAIL2_LABEL"
                />
                
                <field name="observacao"
                       type="textarea" 
                       class="inputbox"
                       rows="3" 
                       cols="30" 
                       label="JFIELD_OBS_LABEL"
                       description="COM_ADMINISTRATIONS_FIELD_OBS_DESC" 
                />

                <field name="id_tipo"
                       type="tipocliente"
                       label="COM_ADMINISTRATIONS_FIELD_TIPO_LABEL"
                />
                
                <field name="published" 
                       type="list" 
                       label="JSTATUS" 
                       class="inputbox" 
                       size="1" 
                       default="1">
                    
                     <option value="1">JPUBLISHED</option>
                     <option value="0">JUNPUBLISHED</option>
                     <option value="2">JARCHIVED</option>
                     <option value="-2">JTRASHED</option>

                 </field>
                 
                 <fields name="id_func">
                        <fieldset name="funcionario">
                                <field name="id_func" 
                                       type="list"
                                       multiple="true"
                                       label="COM_NUBE_CAMPAIGN_FIELD_REDE_LABEL"
                                       description="COM_NUBE_CAMPAIGN_FIELD_REDE_DESC" />
                        </fieldset>
                </fields>
                 
                                
	</fieldset>
        <fieldset name="publish"
		label="COM_ADMINISTRATIONS_GROUP_LABEL_PUBLISHING_DETAILS"
	>

		<field name="created" 
                       type="calendar"
                       label="JGLOBAL_FIELD_CREATED_LABEL" 
                       description="JGLOBAL_FIELD_CREATED_DESC"
                       class="inputbox" 
                       size="22" 
                       format="%Y-%m-%d %H:%M:%S"
                       filter="user_utc" 
                />
                
                <field name="created_by"
                       type="user"
                       label="JGLOBAL_FIELD_CREATED_BY_LABEL" 
                       description="JGLOBAL_FIELD_CREATED_BY_DESC" 
                 />

		<field name="publish_up" 
                       type="calendar"
                       label="COM_ADMINISTRATIONS_FIELD_PUBLISH_UP_LABEL" 
                       description="COM_ADMINISTRATIONS_FIELD_PUBLISH_UP_DESC"
                       class="inputbox" 
                       format="%Y-%m-%d %H:%M:%S" 
                       size="22"
                       filter="user_utc" 
                />

		<field name="publish_down" 
                       type="calendar"
                       label="COM_ADMINISTRATIONS_FIELD_PUBLISH_DOWN_LABEL" 
                       description="COM_ADMINISTRATIONS_FIELD_PUBLISH_DOWN_DESC"
                       class="inputbox" 
                       format="%Y-%m-%d %H:%M:%S" 
                       size="22"
                       filter="user_utc" 
                />
                
	</fieldset>

	
</form>
